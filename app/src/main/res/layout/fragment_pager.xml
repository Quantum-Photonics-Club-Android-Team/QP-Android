<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="900dp"
   android:background="@drawable/background1"
   android:orientation="vertical"
    android:id="@+id/whatwedo"
   tools:context=".PagerFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="82dp">

       <EditText
           android:layout_width="255dp"
           android:layout_height="75dp"
           android:gravity="center"
           android:autofillHints="title"
           android:text="What Do We Do?"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />
   </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="152dp"
       android:weightSum="2"
       android:orientation="horizontal"
       android:baselineAligned="false">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@drawable/background2">
       </androidx.constraintlayout.widget.ConstraintLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@color/cardview_light_background"
           android:orientation="vertical">

           <TextView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_gravity="end"
               android:gravity="center"
               android:textColor="#000000"
               android:textSize="11sp"
               android:textStyle="bold"
               android:text="Our\nMission"
               android:background="@drawable/circle">
           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textColor="#000000"
               android:textSize="11sp"
               android:textStyle="bold"
               android:text="Our goal is to promote STEMM equalities and tech diversities in the long term, while STEMM stands for Science, Technologies, Engineering, Mathematics, Medicine.">
           </TextView>
       </LinearLayout>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="152dp"
       android:weightSum="2"
       android:orientation="horizontal"
       android:baselineAligned="false">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@color/cardview_light_background"
           android:orientation="vertical">

           <TextView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_gravity="start"
               android:gravity="center"
               android:textColor="#000000"
               android:textSize="11sp"
               android:textStyle="bold"
               android:text="Our Vision"
               android:background="@drawable/circle">
           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textColor="#000000"
               android:textSize="11sp"
               android:textStyle="bold"
               android:text="We aim to build an open-minded home community for everyone to get inspired, to have the equal access of STEMM and technologies, as well as to think out of boxes and to be part of innovations.">
           </TextView>
       </LinearLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@drawable/background3">
       </androidx.constraintlayout.widget.ConstraintLayout>
   </LinearLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:background="@drawable/line">

       <TextView
           android:id="@+id/textView1"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:background="@drawable/circle"
           android:gravity="center"
           android:text="Fundamental STEM Lectures"
           android:textColor="#000000"
           android:textSize="11sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"/>

       <TextView
           android:id="@+id/textView2"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="16dp"
           android:background="@drawable/circle"
           android:gravity="center"
           android:text="Tech News Forums"
           android:textColor="#000000"
           android:textSize="11sp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"/>

       <TextView
           android:id="@+id/textView3"
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_marginStart="8dp"
           android:background="@drawable/circle"
           android:gravity="center"
           android:text="Professional Networking Events"
           android:textColor="#000000"
           android:textSize="11sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

       <TextView
           android:id="@+id/textView4"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_marginEnd="4dp"
           android:background="@drawable/circle"
           android:gravity="center"
           android:text="Academic Paper Seminars"
           android:textColor="#000000"
           android:textSize="11sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

       <TextView
           android:id="@+id/textView5"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:layout_gravity="center"
           android:text="Live Interactive STEMM Sessions for Everyone!"
           android:textColor="#000000"
           android:textSize="16sp"
           android:textStyle="bold"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#8F8F8F"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textColor="#000000"
               android:textSize="15sp"
               android:textStyle="bold"
               android:text="Our Belief">
           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textColor="#000000"
               android:textSize="11sp"
               android:textStyle="bold"
               android:text="We believe all human beings can embrace who they are, can define their future, and can change the world, regradless of backgrounds, racee, ethnicity, gender, religion, social standing, income levels etc.">
           </TextView>
       </LinearLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@color/cardview_light_background">

       <ImageView
           android:id="@+id/snowimage"
           android:layout_width="120dp"
           android:layout_height="100dp"
           android:src="@drawable/snow"
           tools:layout_editor_absoluteX="0dp"
           tools:layout_editor_absoluteY="0dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:contentDescription="snowbackground"/>

       <TextView
           android:id="@+id/ourvalue"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginStart="207dp"
           android:text="Our Value"
           android:textColor="#000000"
           android:textSize="15sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/snowimage"
           app:layout_constraintTop_toTopOf="parent"/>

       <TextView
           android:id="@+id/hexagon1"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_marginStart="124dp"
           android:layout_marginTop="20dp"
           android:background="@drawable/hexagon"
           android:gravity="center"
           android:text="LOVE"
           android:textColor="#0B25BA"
           android:textSize="11sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/snowimage"
           app:layout_constraintTop_toTopOf="@id/ourvalue"/>

       <TextView
           android:id="@+id/hexagon2"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_marginStart="60dp"
           android:layout_marginTop="44dp"
           android:background="@drawable/hexagon"
           android:gravity="center"
           android:text="TRUTH"
           android:textColor="#0B25BA"
           android:textSize="11sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/hexagon1"
           app:layout_constraintTop_toTopOf="@id/ourvalue"/>

       <TextView
           android:id="@+id/hexagon3"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_marginStart="56dp"
           android:layout_marginTop="20dp"
           android:background="@drawable/hexagon"
           android:gravity="center"
           android:text="GREATNESS"
           android:textColor="#0B25BA"
           android:textSize="8sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/hexagon2"
           app:layout_constraintTop_toTopOf="@id/ourvalue"/>

       <TextView
           android:id="@+id/hexagon4"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_marginStart="56dp"
           android:layout_marginTop="52dp"
           android:background="@drawable/hexagon"
           android:gravity="center"
           android:text="INSPIRATION"
           android:textColor="#0B25BA"
           android:textSize="7sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/hexagon3"
           app:layout_constraintTop_toTopOf="@id/ourvalue"/>

       <TextView
           android:id="@+id/hexagon5"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_marginStart="52dp"
           android:layout_marginTop="20dp"
           android:background="@drawable/hexagon"
           android:gravity="center"
           android:text="INNOVATION"
           android:textColor="#0B25BA"
           android:textSize="7sp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/hexagon4"
           app:layout_constraintTop_toTopOf="@id/ourvalue"/>
   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>